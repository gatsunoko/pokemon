%p
  = @poke.name
%p
  %span{onclick: "statusChange('up', '#hp_#{@output}', '#{@output}', 'hp')"}
    ↑
  %span{onclick: "statusChange('down', '#hp_#{@output}', '#{@output}', 'hp')"}
    ↓
  - if @output == 'poke_1'
    %strong H:
  %span{ id: "hp_#{@output}"}
    = @poke.h
