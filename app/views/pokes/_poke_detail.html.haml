%p
  %strong タイプ１:
  %span{class: "#{type_class(@poke.type_1)}"}
    = is_type(@poke.type_1).to_s
%p
  %strong タイプ２:
  %span{class: "#{type_class(@poke.type_2)}"}
    = is_type(@poke.type_2).to_s
.attack_type
  %p
    4倍 
    -1.upto(18) do |attack|
      - result = attack_result(attack, @poke.type_1, @poke.type_2)
      - if result == 4
        %span{class: "#{type_class(attack)}"}
          = is_type(attack).to_s
